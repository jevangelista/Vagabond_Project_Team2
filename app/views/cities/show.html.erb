<h1><%= @city.name %></h1>

<%= image_tag(@city.imgurl, width:'100%', height:'30%') %>
<%= button_to "Add a post to this city", new_post_path(@city.id), method: "get" %>
<div>

  <% @city.posts.each do |post| %>
  	<div class='list-group'>
  		<%= link_to post.title, user_posts_path(post) %>
  	</div>

</div>  
<% end %>
