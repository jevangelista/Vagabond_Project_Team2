<h1>Recent Posts</h1>
<% @posts.take(10).each do |post| %>
  <% city = @cities.find_by_id post.city_id %>
  <div>
    Title: <%= link_to post.title, post_path(post) %> <br>
    <%= link_to city.name, city_name_path(city) %> <br>
    Content: <%=  post.content %>
    <p>
    <% if post.user == current_user %>
      <%= link_to "Edit", edit_post_path(post) %> | 
      <%= link_to "Delete", post_path(post),
      method: :delete,
      data: { confirm: 'do you really want to delete?'} %>
      | <%= link_to 'Back', user_path(post.user) %>
    <% else %>
        <%= link_to 'Back', user_path(post.user) %>
    <% end %>

    </p>
    <hr>
  </div>
<% end %>

