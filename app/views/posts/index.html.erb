<h1>Here are the posts!</h1>
<% @posts.each do |post| %>
  <div>
    Title: <%= link_to post.title, post_path(post) %> <br>
    Content: <%=  post.content %>
    <p>
    <% if post.user == current_user %>
      <%= link_to "Edit", edit_post_path(post) %> | 
      <%= link_to "Delete", post_path(post),
      method: :delete,
      data: { confirm: 'do you really want to delete?'} %>
      | <%= link_to 'Back', user_path(post.user) %>
    <% else %>
        <%= link_to 'Back', user_path(post.user) %>
    <% end %>

    </p>
    <hr>
  </div>
<% end %>



