<h1><%= @post.title %></h1>

<p class="blurry"><%= @post.content %></p>
<div>Tags: <%= raw tag_links(@post.all_tags)%><div>

<small><%= @post.created_at %></small>
<br/>

<% if @post.user == current_user %>
  <span class="links"><%= link_to 'Edit', edit_post_path(@post) %> | 
  <span class="links"><%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure you want to delete this post' } %></span> | 
  <% end %>
   <span class="links"><%= link_to 'Back', posts_path %></span>


