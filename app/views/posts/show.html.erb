<h1><%= @post.title %></h1>
<p><%= @post.content %></p>
<div>Tags: <%= raw tag_links(@post.all_tags)%><div>

<small><%= @post.created_at %></small>
<br/>

<% if @post.user == current_user %>
  <%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure you want to delete this post' } %>
  | <%= link_to 'Back', posts_path %>
<% else %>
  <%= link_to 'Back', posts_path %>
<% end %>
